<?xml version="1.0" encoding="UTF-8"?>
<?taglib uri="http://www.zkoss.org/dsp/web/core" prefix="c" ?>
<?page title="${c:l('application.title')}"?>

<?script src="./test.js"?>

<window border="none" width="960px" position="center,top" mode="overlapped" sclass="window" apply="com.athan.mobile.controls.IndexViewCtrl">
	
	<style src="./css/index.css" />
	
	<vbox >
	
		<hbox width="960px" zclass="header_layout">
			<image src="/images/site_header.jpg"></image>
			<button id="english_flag" zclass="english_flag-btn"></button>
			<button id="french_flag" zclass="french_flag-btn"></button>
		</hbox>
		
		<image src="/images/site_bg_header.png" sclass="software_purpose_header_bg" />
		<label value="${labels.application.header}" height="30px" width="100%" zclass="software_purpose_header" />
	
		<tabbox width="1024px" sclass="nav_tabs">
	        <tabs id="tabs">
	            <tab label="${c:l('tab.home')}" />
	            <tab label="${c:l('tab.download')}" />
	            <tab label="${c:l('tab.news')}" />
	            <tab label="${c:l('tab.resources')}" />
	            <tab label="${c:l('tab.contribute')}" />
	            <tab label="${c:l('tab.about')}" />
	        </tabs>
	        <tabpanels width="960px">
	            <tabpanel>
	                <toolbar width="960px">
	                    <toolbarbutton label="${c:l('tab.home.introduction')}" />
	                    <toolbarbutton label="${c:l('tab.home.features')}" />
	                </toolbar>
	            </tabpanel>
	            <tabpanel>
	                <toolbar width="960px">
	                    <toolbarbutton label="${c:l('tab.download.current')}" />
	                    <toolbarbutton label="${c:l('tab.download.changelogs')}" />
	                </toolbar>
	            </tabpanel>
	            <tabpanel>
	                <toolbar width="960px">
	                    <toolbarbutton label="${c:l('tab.news.releases')}" />
	                    <toolbarbutton label="${c:l('tab.news.nextfeatures')}" />
	                </toolbar>
	            </tabpanel>
	            <tabpanel>
	                <toolbar width="1024px">
	                    <toolbarbutton label="${c:l('tab.resources.soundfiles')}" />
	                    <toolbarbutton label="${c:l('tab.resources.project')}" />
	                </toolbar>
	            </tabpanel>
	            <tabpanel>
	                <toolbar width="960px">
	                    <toolbarbutton label="${c:l('tab.contribute.feedbacks')}" />
	                </toolbar>
	            </tabpanel>
	            <tabpanel>
	                <toolbar width="960px">
	                    <toolbarbutton label="${c:l('tab.about.contributor')}" />
	                    <toolbarbutton label="${c:l('tab.about.credits')}" />
	                    <toolbarbutton label="${c:l('tab.about.acknowledgment')}" />
	                </toolbar>
	            </tabpanel>
	        </tabpanels>
	    </tabbox>
    
    <hlayout>
        <label id="current_category" sclass="nav_text nav_category" >Our Product</label>
        <label sclass="nav_text">-</label>
        <label id="current_subpage" sclass="nav_text">Index</label>
    </hlayout>
    
    </vbox>
</window>
