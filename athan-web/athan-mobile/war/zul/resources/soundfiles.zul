							<h:param name="wmode" value="transparent" />
							<h:param name="movie" value="/swf/dewplayer.swf" />
							<h:param name="flashvars" value="mp3=/sound/mp3/Bosnia.mp3&amp;showtime=1" />
						</h:object>
					</h:td>
					<h:td>
						<button label="MP3" />
					</h:td>
					<h:td>
						<button label="WAV" />
					</h:td>
				</h:tr>
				<h:tr>
