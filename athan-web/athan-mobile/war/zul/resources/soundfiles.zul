							data="/swf/dewplayer.swf" width="200" height="20" id="dewplayer"
							name="dewplayer">
							<h:param name="wmode" value="transparent" />
							<h:param name="movie" value="/swf/dewplayer.swf" />
							<h:param name="flashvars" value="mp3=/sound/mp3/Alaqsa.mp3&amp;showtime=1" />
						</h:object>
					</h:td>
					<h:td>
						<image id="btnMp3Alaqsa" sclass="tlb_mp3" />
					</h:td>
					<h:td>
						<toolbarbutton id="btnWavAlaqsa" sclass="tlb_wav" />
					</h:td>
				</h:tr>
				<h:tr>
					<h:td>
						<label value="Bosnia" zclass="song_name" />
